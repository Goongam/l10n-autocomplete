{
  "name": "l10n-autocomplete",
  "displayName": "l10n-autocomplete",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "l10n-autocomplete.reloadl10n",
        "title": "reloadl10n"
      }
    ],
    "configuration": [
      {
        "title": "l10n-autocomplete settings",
        "properties": {
          "l10n-autocomplete.l10nPath": {
            "type": "string",
            "default": "C:/workspace/scratch-l10n",
            "description": "Path to the l10n folder"
          },
          "l10n-autocomplete.previewLanguageWhiteList": {
            "type": "array",
            "default": [
              "en",
              "ko",
              "ja"
            ],
            "description": "List of languages to show in the preview"
          }
        }
      }
    ]
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/assert": "^1.5.11",
    "eslint": "^9.19.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "mocha": "^11.1.0",
    "typescript": "^5.7.3",
    "@vscode/test-web": "^0.0.66",
    "ts-loader": "^9.5.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "@types/webpack-env": "^1.18.8",
    "assert": "^2.1.0",
    "process": "^0.11.10"
  }
}
